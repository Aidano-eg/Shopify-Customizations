<style>
  .brand-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
  }

  .brand-bar-left, .brand-bar-right {
    display: flex;
    align-items: center;
  }
  .divider {
    margin: 0;
  }


  @media (max-width: 768px) {
    .brand-bar {
      display: none; /* Hide on mobile devices */
    }
  }
</style>

<div class="brand-bar" style="background-color: {{ section.settings.background_color }};">
    <div class="brand-bar-left">

    {% if section.settings.left_image_1 %}
        <a href="{{ section.settings.left_link_1 }}">
            <img src="{{ section.settings.left_image_1 | image_url: width: 98, height: 24  }}" alt="Shop My Evergreen">
        </a>
    {% endif %}

      <span  class="divider" style="color: {{ section.settings.link_color }};">|</span>

    {% if section.settings.left_image_2 %}
        <a href="{{ section.settings.left_link_2 }}">
            <img src="{{ section.settings.left_image_2 | image_url: width: 108, height: 24 }}" alt="Shop Plow and Hearth">
        </a>        
    {% endif %}

      <span  class="divider" style="color: {{ section.settings.link_color }};">|</span>

    {% if section.settings.left_image_3 %}
        <a href="{{ section.settings.left_link_3 }}">
            <img src="{{ section.settings.left_image_3 | image_url: width: 158, height: 24 }}" alt="Shop Team Sports America">
        </a>
    {% endif %}
        
    </div>
    
    <div class="brand-bar-right">

    </div>
</div>

{% schema %}
{
    "name": "Custom Brand Bar",
    "settings": [
        {
            "type": "header",
            "content": "Brand Bar Colors"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
        },
        {
            "type": "color",
            "id": "link_color",
            "label": "Divider Color",
            "default": "#ffffff"
        },
        {
            "type": "header",
            "content": "Brand Logos"
        },
        {
            "type": "image_picker",
            "id": "left_image_1",
            "label": "Left Image 1"
        },
        {
            "type": "url",
            "id": "left_link_1",
            "label": "Left Link 1"
        },
        {
            "type": "image_picker",
            "id": "left_image_2",
            "label": "Left Image 2"
        },
        {
            "type": "url",
            "id": "left_link_2",
            "label": "Left Link 2"
        },
        {
            "type": "image_picker",
            "id": "left_image_3",
            "label": "Left Image 3"
        },
        {
            "type": "url",
            "id": "left_link_3",
            "label": "Left Link 3"
        }
        
        ],
        "presets": [
            {
                "name": "Custom Brand Bar",
            }
        ]
}
{% endschema %}
